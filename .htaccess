Options -Multiviews
RewriteEngine On
RewriteBase /

# Serve existing files/directories as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Pretty URL for checkout → serve checkout-new.html
RewriteRule ^checkout/?$ checkout-new.html [L,QSA]

# Clean URLs for courses → course-view.html with query params

# Clean Reset (detox-cursus)
RewriteRule ^detox-cursus/?$ course-view.html?course=clean-reset [L,QSA]
RewriteRule ^detox-cursus/les([0-9]+)/?$ course-view.html?course=clean-reset&lesson=$1 [L,QSA]

# Clean lesson URLs preferred by user (clean-reset-les{n}) → lesson view
RewriteRule ^clean-reset-les([0-9]+)/?$ lesson-view.html?course=clean-reset&lesson=$1 [L,QSA]

# Alias: detox-cursus-les{n} → static redirect helper to avoid conflicts
RewriteRule ^detox-cursus-les([0-9]+)/?$ detox-cursus-les/index.html?l=$1 [L,QSA]

# Other course aliases → course view and lessons
RewriteRule ^powerfoods/?$ course-view.html?course=powerfoods-superfood-specerij [L,QSA]
RewriteRule ^powerfoods-les([0-9]+)/?$ lesson-view.html?course=powerfoods-superfood-specerij&lesson=$1 [L,QSA]

RewriteRule ^juiste-balans/?$ course-view.html?course=de-juiste-balans [L,QSA]
RewriteRule ^juiste-balans-les([0-9]+)/?$ lesson-view.html?course=de-juiste-balans&lesson=$1 [L,QSA]

RewriteRule ^30-dagen-challenge/?$ course-view.html?course=30-dagen-challenge [L,QSA]
